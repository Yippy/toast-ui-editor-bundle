<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="yippy_toast_ui_editor.form.type" class="Yippy\ToastUiEditorBundle\Form\Type\ToastUiEditorType">
            <argument type="service" id="yippy_toast_ui_editor.configuration" />
            <argument type="expression">container.hasParameter('locale') ? parameter('locale') : null</argument>
            <tag name="form.type" />
        </service>
    </services>
</container>
